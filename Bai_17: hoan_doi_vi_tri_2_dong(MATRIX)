#include<stdio.h>
#include<conio.h>
void nhapMaTran(int a[][50], int m, int n)
{
    for(int i=0;i<m;i++)
    {
        for(int j=0;j<n;j++)
        {
            printf("Nhap A[%d][%d] = ", i, j);
            scanf("%d", &a[i][j]);
        }
    }
}
void inMaTran(int a[][50], int m, int n)
{
    for(int i=0;i<m;i++)
    {
        for(int j=0;j<n;j++)
        {
            printf("%4d", a[i][j]);
        }
        printf("\n\n");
    }
}
void hoanDoi(int &a, int &b)  //Viết hàm hoán vị
{
    int tmp = a;
    a = b;
    b = tmp;
}
void hoanDoi2Dong(int A[50][50], int m, int k, int a)
{
    int i;
    for(i=0;i<m;i++)
    {
        hoanDoi(A[k][i],A[a][i]); //Hoán vị 2 dòng 
    }
}
int main()
{
    int A[50][50], n, k, a,m;
    printf("Nhap so dong: ");
    scanf("%d", &m);
    printf("\nNhap so cot: ");
    scanf("%d", &n);
    printf("\nNhap ma tran: \n");
    nhapMaTran(A,m,n);
    inMaTran(A,m,n);
    printf("\nNhap 2 dong can hoan doi: ");
    scanf("%d%d", &a,&k);
    printf("Mang sau khi hoan doi: \n");
    hoanDoi2Dong(A, n, k, a);
    inMaTran(A,m,n);
    getch();
    return 0;

}






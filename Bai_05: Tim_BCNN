#include<stdio.h>

#include<conio.h>
//TÃ¬m UCLN, BCNN
int UCLN(int a, int b){
    if(a==0||b==0){
        return a+b;
    }
    while(a!=b){
        if(a>b){
            a -=b;
        }else{
        b-=a;
        }
    }
    return a;
}
int BCNN(int a, int b){
    int bcnn = (a*b)/UCLN(a,b);
    return bcnn;
}
int main(){
    int a, b;
    printf("Nhap a, b: ");
    scanf("%d%d", &a, &b);
    printf("UCLN cua a, b la %d\n", UCLN(a,b));
    printf("BCNN cua a, b la %d", BCNN(a, b));
    return 0;
}

